<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table>
  <thead>
    <tr>
      <td style="width: 70px;"></td>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td style="width: 70px;">
          <% if idea.picture? %>
             <%= image_tag idea.picture.thumb, :class => "thumb" %>
          <% else %>
             <%= image_tag "no_picture.png", :class => "thumb" %>
          <% end %>
        </td>
        <td><%= idea.name %></td>
        <td><%= idea.category.name %></td>
        <td><%= idea.description %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

